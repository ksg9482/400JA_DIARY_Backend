{
  "name": "400ja_diary_backend",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.ts",
  "scripts": {
    "postinstall": "npm run build",
    "build": "tsc -p tsconfig.json",
    "prestart": "rm -rf ./dist && npm run build",
    "start": "NODE_ENV=production node -r ./tsconfig-paths-bootstrap.js dist/src/app.js",
    "start:prod": "NODE_ENV=production nodemon",
    "start:dev": "NODE_ENV=development nodemon",
    "inspect": "nodemon --inspect src/app.ts",
    "test": "clear && jest",
    "test:watch": "jest --watch",
    "test:cov": "clear && jest --coverage",
    "test:e2e": "jest --config ./test/jest.e2e.json --detectOpenHandles",
    "lint": "npm run lint:js ",
    "lint:eslint": "eslint --ignore-path .gitignore --ext .ts",
    "lint:js": "npm run lint:eslint src/",
    "lint:fix": "npm run lint:js -- --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ksg9482/400JA_DIARY_Backend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ksg9482/400JA_DIARY_Backend/issues"
  },
  "homepage": "https://github.com/ksg9482/400JA_DIARY_Backend#readme",
  "dependencies": {
    "agenda": "^4.3.0",
    "agendash": "^3.1.0",
    "axios": "^0.27.2",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.20.0",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-jwt": "^7.7.5",
    "form-data": "^4.0.0",
    "helmet": "^5.1.0",
    "jsonwebtoken": "^8.5.1",
    "mailgun-js": "^0.22.0",
    "mailgun.js": "^8.0.0",
    "mongoose": "^6.4.4",
    "supertest": "^6.2.4",
    "swagger-cli": "^4.0.4",
    "swagger-jsdoc": "^6.2.5",
    "swagger-ui-express": "^4.5.0",
    "typescript": "^4.8.4",
    "uuid": "^9.0.0",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/form-data": "^2.5.0",
    "@types/jest": "^28.1.6",
    "@types/mailgun-js": "^0.22.12",
    "@types/node": "^18.0.3",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.1",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "tslint": "^6.1.3"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "preset": "ts-jest",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.service.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "node_modules"
    ]
  }
}
